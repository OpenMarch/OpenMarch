---
import LegalLayout from "@/layouts/LegalLayout.astro";
import { ProseClass } from "@/components/ProseClass";

const posts = await Astro.glob("../../../content/privacy/index.md");
const post = posts[0];
const title = post?.frontmatter?.title ?? "Privacy Policy";
const lastUpdated = post?.frontmatter?.lastUpdated;
---

<LegalLayout title={title} lastUpdated={lastUpdated}>
    <article class={`${ProseClass} w-full`}>{post && <post.Content />}</article>
</LegalLayout>
