{
    "name": "@openmarch/metronome",
    "type": "module",
    "types": "dist/index.d.ts",
    "main": "dist/index.cjs",
    "license": "Apache-2.0",
    "version": "1.1.0",
    "description": "Metronome utility for OpenMarch",
    "homepage": "https://openmarch.com",
    "author": "OpenMarch LLC <contact@openmarch.com>",
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OpenMarch/OpenMarch.git"
    },
    "scripts": {
        "build": "tsup --format esm,cjs",
        "dev": "tsup --watch",
        "test": "vitest run --silent",
        "test:watch": "vitest"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE"
    ],
    "peerDependencies": {
        "typescript": "^5"
    },
    "dependencies": {
        "node-wav": "^0.0.2"
    },
    "devDependencies": {
        "@types/node": "^20.19.9",
        "@types/node-wav": "^0.0.4",
        "vitest": "^2.1.9",
        "tsup": "^8.5.0"
    }
}
