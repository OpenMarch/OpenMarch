---
import { getCollection } from "astro:content";
import SidebarTree from "@/components/playground/SidebarTree.astro";

const previews = await getCollection("previews");
---

<div
    class="rounded-16 border-stroke bg-fg-1 col-span-1 flex h-full flex-col gap-3 border p-4"
>
    <div class="flex w-full items-center justify-between">
        <a href="/"> OpenMarch UI </a>
    </div>
    <SidebarTree items={previews} />

    <span class="flex-grow"></span>

    <a
        href="https://github.com/K0Rhq/un/tree/main/packages/preview"
        target="_blank"
        rel="noreferrer"
        class="text-sub text-text/50 hover:text-accent-reversed duration-150 ease-out"
        >Powered by unPreview</a
    >
</div>
