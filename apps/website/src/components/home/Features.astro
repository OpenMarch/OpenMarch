---
import { Image } from "astro:assets";
import {
    DotsNineIcon,
    ArrowSquareOutIcon,
    GridNineIcon,
    PaintBrushHouseholdIcon,
    MetronomeIcon,
    MusicNotesIcon,
    AlignCenterVerticalIcon,
    ShapesIcon,
} from "@phosphor-icons/react";
import { Badge } from "@openmarch/ui";
import { LogoTolgee } from "@/components/Logos";
import shapesDark from "@/assets/home/shapes-dark.png";
import shapesLight from "@/assets/home/shapes-light.png";
import musicDark from "@/assets/home/music-dark.png";
import musicLight from "@/assets/home/music-light.png";
import customFieldDark from "@/assets/home/custom-field-dark.png";
import customFieldLight from "@/assets/home/custom-field-light.png";
import drillChart from "@/assets/home/drill-chart.png";
import translationDark from "@/assets/home/translation-dark.png";
import translationLight from "@/assets/home/translation-light.png";
---

<section id="features" class="relative flex h-fit flex-col gap-32">
    <div class="flex flex-col gap-16">
        <h2 class="text-h2">Drill writing</h2>
        <div
            class="grid grid-cols-4 grid-rows-1 max-[850px]:grid-rows-2 max-[850px]:grid-cols-2 gap-8"
        >
            <div
                class="grid grid-cols-2 grid-rows-1 gap-8 col-span-2 row-span-1"
            >
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <AlignCenterVerticalIcon size={28} />
                    <h4 class="text-h4">Alignment</h4>
                    <p class="text-body leading-[180%]">
                        Align each marcher to perfection, with coordinate
                        rounding, and alignment tools.
                    </p>
                </div>
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <ShapesIcon size={28} />
                    <h4 class="text-h4">Shapes</h4>
                    <p class="text-body leading-[180%]">
                        Build shapes with groups of marchers by selecting them,
                        drawing lines, and adding segments. Use curves, straight
                        lines, and move starting points to create more complex
                        shapes.
                    </p>
                </div>
            </div>
            <Image
                src={shapesDark}
                alt="Shapes Screenshot"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="hidden dark:block border border-stroke h-full w-full rounded-6 col-span-2 object-center object-cover"
            />
            <Image
                src={shapesLight}
                alt="Shapes Screenshot"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="block dark:hidden border border-stroke h-full w-full rounded-6 col-span-2 object-left object-cover"
            />
        </div>
    </div>

    <div class="flex flex-col gap-16">
        <h2 class="text-h2">Music</h2>
        <div
            class="grid grid-cols-4 grid-rows-1 max-[850px]:grid-rows-2 max-[850px]:grid-cols-2 gap-8"
        >
            <Image
                src={musicDark}
                alt="Music Screenshot"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="hidden dark:block border border-stroke rounded-6 col-span-2 row-span-2 object-left object-cover"
            />
            <Image
                src={musicLight}
                alt="Music Screenshot"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="block dark:hidden border border-stroke rounded-6 col-span-2 row-span-2 object-left object-cover"
            />
            <div
                class="grid grid-cols-2 grid-rows-1 gap-8 col-span-2 row-span-1"
            >
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <MetronomeIcon size={28} />
                    <h4 class="text-h4">Tempo groups</h4>
                    <p class="text-body leading-[180%]">
                        Add your music’s measures as tempo groups, sets of
                        measures with a specific tempo and time signature. Add
                        rehearsal markers to each group.
                    </p>
                </div>
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <MusicNotesIcon size={28} />
                    <h4 class="text-h4">
                        Transfer music from your notation software
                    </h4>
                    <p class="text-body leading-[180%]">
                        Import an audio file from your notation software, and
                        bring in a MusicXML file, it’ll be converted into tempo
                        groups automatically.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="flex flex-col gap-16">
        <h2 class="text-h2">Field</h2>
        <div
            class="grid grid-cols-4 grid-rows-1 max-[850px]:grid-rows-2 max-[850px]:grid-cols-2 gap-8"
        >
            <div
                class="grid grid-cols-2 grid-rows-1 gap-8 col-span-2 row-span-1"
            >
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <GridNineIcon size={28} />
                    <h4 class="text-h4">Your Dimensions</h4>
                    <p class="text-body leading-[180%]">
                        Design shows for any ensemble, anywhere. Customize
                        dimensions, units, checkpoints, and descriptions, to
                        match wherever you’re performing.
                    </p>
                </div>
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <PaintBrushHouseholdIcon size={28} />
                    <h4 class="text-h4">Your Theme</h4>
                    <p class="text-body leading-[180%]">
                        Add in your tarp as a background image. Change the
                        colors of the grid lines and customize dot colors for
                        each section on the field.
                    </p>
                </div>
            </div>
            <Image
                src={customFieldDark}
                alt="Custom Field Screenshot"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="hidden dark:block border border-stroke rounded-6 col-span-2 row-span-2 object-left object-cover"
            />
            <Image
                src={customFieldLight}
                alt="Custom Field Screenshot"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="block dark:hidden border border-stroke rounded-6 col-span-2 row-span-2 object-left object-cover"
            />
        </div>
    </div>

    <div class="flex flex-col gap-16">
        <h2 class="text-h2">To your rehearsal</h2>
        <div
            class="grid grid-cols-4 grid-rows-1 max-[850px]:grid-rows-2 max-[850px]:grid-cols-2 gap-8"
        >
            <Image
                src={drillChart}
                alt="Drill chart Screenshot"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="border border-stroke rounded-6 col-span-2 row-span-2 object-left object-cover"
            />
            <div
                class="grid grid-cols-2 grid-rows-1 gap-8 col-span-2 row-span-1"
            >
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <DotsNineIcon size={28} />
                    <h4 class="text-h4">Export drill charts</h4>
                    <p class="text-body leading-[180%]">
                        Export a preview of the field as a PDF and individualize
                        it, showing next and previous paths, notes, and
                        coordinates for an individual performer.
                    </p>
                </div>
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <ArrowSquareOutIcon size={28} />
                    <h4 class="text-h4">Export coordinate sheets</h4>
                    <p class="text-body leading-[180%]">
                        You can export individual coordinate sheets as a PDF for
                        each performer, showing their X/Y coordinates, and
                        corresponding measures for that page.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="flex flex-col gap-16">
        <h2 class="text-h2 flex gap-8 items-center">
            Drill design, international
        </h2>
        <div
            class="grid grid-cols-4 grid-rows-1 max-[850px]:grid-rows-2 max-[850px]:grid-cols-2 gap-8"
        >
            <div
                class="grid grid-cols-1 grid-rows-1 gap-8 col-span-2 row-span-1"
            >
                <div
                    class="bg-fg-1 border border-stroke justify-center h-full rounded-6 p-12 flex flex-col gap-8"
                >
                    <h4 class="text-h4">Localization & translation</h4>
                    <p class="text-body leading-[180%]">
                        We support English, Spanish, Japanese, and Portuguese in
                        the desktop app, making drill design more accessible for
                        the more of the world.
                        <a
                            href="https://tolgee.io"
                            class="text-body leading-[100%] hover:text-accent underline duration-150 inline"
                        >
                            Powered by Tolgee!
                        </a>
                    </p>
                    <LogoTolgee className="text-[#2C3C52] dark:text-white" />
                </div>
            </div>
            <Image
                src={translationDark}
                alt="Desktop app in spanish"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="hidden dark:block border border-stroke rounded-6 col-span-2 row-span-2 object-left object-cover"
            />
            <Image
                src={translationLight}
                alt="Desktop app in spanish"
                width={1920}
                height={1080}
                format="webp"
                quality={80}
                class="block dark:hidden border border-stroke rounded-6 col-span-2 row-span-2 object-left object-cover"
            />
        </div>
    </div>
</section>
