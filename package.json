{
    "name": "@openmarch/monorepo",
    "private": true,
    "packageManager": "pnpm@10.11.0",
    "funding": {
        "type": "patreon",
        "url": "https://www.patreon.com/c/openmarch"
    },
    "bugs": {
        "url": "https://github.com/OpenMarch/OpenMarch/issues",
        "email": "dev@openmarch.com"
    },
    "homepage": "https://openmarch.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/OpenMarch/OpenMarch.git"
    },
    "scripts": {
        "desktop": "turbo run --filter=@openmarch/desktop",
        "build": "turbo run build",
        "release": "pnpm run build && changeset version && changeset publish",
        "site": "turbo run --filter=@openmarch/website",
        "ui": "turbo run --filter=@openmarch/ui",
        "test": "turbo run test",
        "lint": "turbo run lint",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "fix": "turbo run fix",
        "spellcheck": "turbo run spellcheck && cspell .",
        "prepare": "husky"
    },
    "devDependencies": {
        "@tanstack/eslint-plugin-query": "^5.89.0",
        "@types/bun": "latest",
        "@types/sanitize-html": "^2.16.0",
        "@typescript-eslint/parser": "^8.36.0",
        "cspell": "^9.1.3",
        "eslint": "8.57.1",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-astro": "^1.3.1",
        "eslint-plugin-react": "^7.37.5",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.5",
        "prettier": "^3.8.0",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-tailwindcss": "^0.6.13",
        "turbo": "^2.6.3"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "pnpm": {
        "overrides": {
            "react": "^19.0.0",
            "react-dom": "^19.0.0",
            "@playwright/test": "1.56.1",
            "playwright": "1.56.1",
            "playwright-core": "1.56.1"
        }
    },
    "dependencies": {
        "@changesets/cli": "^2.29.5",
        "sanitize-html": "^2.17.0"
    }
}
