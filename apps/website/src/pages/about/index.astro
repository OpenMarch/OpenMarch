---
import Layout from "@/layouts/Layout.astro";
import { LogoOpenMarchText } from "@/components/Logos";
import Mission from "@/components/about/Mission.astro";
import Team from "@/components/about/Team.astro";
---

<Layout title="About">
    <LogoOpenMarchText
        width="300"
        height="168"
        className="motion-preset-slide-up-md"
    />

    <Mission />
    <Team />

    <div
        class="absolute top-[10vh] -left-[0%] motion-preset-fade-lg motion-delay-300 -z-50 size-[850px] max-[640px]:size-[450px] -translate-x-1/2"
        style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 65%); opacity: 0.4;"
    >
    </div>

    <div
        class="absolute top-[100vh] -right-[40%] motion-preset-fade-lg motion-delay-300 -z-50 size-[850px] max-[640px]:hidden -translate-x-1/2"
        style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 65%); opacity: 0.4;"
    >
    </div>
    <div
        class="absolute top-[200vh] left-[0%] motion-preset-fade-lg motion-delay-300 -z-50 size-[850px] max-[640px]:hidden -translate-x-1/2"
        style="background: radial-gradient(circle, var(--color-accent) 0%, transparent 65%); opacity: 0.4;"
    >
    </div>
</Layout>
