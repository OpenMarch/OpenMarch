{
    "name": "@openmarch/desktop",
    "productName": "OpenMarch",
    "description": "Free drill-writing software for the marching arts",
    "version": "0.0.10",
    "main": "dist-electron/main/index.js",
    "author": "OpenMarch LLC",
    "license": "GPL-3.0",
    "private": true,
    "debug": {
        "env": {
            "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OpenMarch/OpenMarch.git"
    },
    "scripts": {
        "dev": "pnpm run apply-styles && vite",
        "app:prepare": "electron-rebuild -f -w better-sqlite3",
        "postinstall": "electron-builder install-app-deps",
        "build": "pnpm run apply-styles && tsc && vite build",
        "clean": "rm -rf node_modules dist-electron release",
        "apply-styles": "node src/styles/apply-tailwind-vars.js",
        "lint": "eslint . --fix",
        "format": "prettier --write .",
        "spellcheck": "cspell 'src/**' 'electron/**' '*.md'",
        "fix": "prettier --write . && eslint . --fix && cspell 'src/**' 'electron/**' '*.md'",
        "test": "vitest",
        "test:prepare": "pnpm rebuild better-sqlite3  ",
        "test:run": "vitest run",
        "test:coverage": "pnpm test:run -- --coverage",
        "test:clearCache": "vitest --clearCache"
    },
    "dependencies": {
        "@fontsource/dm-mono": "^5.2.5",
        "@fontsource/dm-sans": "^5.2.5",
        "@openmarch/ui": "workspace:*",
        "@phosphor-icons/react": "^2.1.7",
        "@radix-ui/react-alert-dialog": "^1.1.6",
        "@radix-ui/react-checkbox": "^1.1.4",
        "@radix-ui/react-collapsible": "^1.1.3",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-form": "^0.1.2",
        "@radix-ui/react-radio-group": "^1.2.3",
        "@radix-ui/react-select": "^2.1.6",
        "@radix-ui/react-switch": "^1.1.3",
        "@radix-ui/react-tabs": "^1.1.12",
        "@radix-ui/react-toggle-group": "^1.1.2",
        "@radix-ui/react-tooltip": "^1.1.8",
        "@sentry/electron": "^6.1.0",
        "@sentry/vite-plugin": "^3.2.2",
        "@uiw/react-color": "^2.4.1",
        "@uiw/react-color-sketch": "^2.3.4",
        "@uiw/react-color-swatch": "^2.3.4",
        "adm-zip": "^0.5.16",
        "better-sqlite3": "^9.6.0",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "drizzle-orm": "^0.43.1",
        "electron-store": "^8.2.0",
        "electron-updater": "^6.3.9",
        "fabric": "^5.5.1",
        "jquery": "^3.7.1",
        "jszip": "^3.10.1",
        "nan": "^2.22.0",
        "pdfkit": "^0.17.1",
        "posthog-js": "^1.252.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-icons": "^4.12.0",
        "react-markdown": "^10.1.0",
        "react-toastify": "^10.0.6",
        "rimraf": "^5.0.10",
        "sonner": "^1.7.4",
        "svg-to-pdfkit": "^0.1.8",
        "tailwind-merge": "^2.6.0",
        "uuid": "^11.1.0",
        "wavesurfer.js": "^7.9.4",
        "xml2abc": "file:external-packages/xml2abc.tgz",
        "zustand": "^4.5.6"
    },
    "devDependencies": {
        "@electron/notarize": "^3.0.1",
        "@electron/rebuild": "^3.7.1",
        "@playwright/test": "^1.51.0",
        "@tailwindcss/vite": "4.1.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^15.0.7",
        "@testing-library/user-event": "^14.6.1",
        "@types/better-sqlite3": "^7.6.12",
        "@types/fabric": "^5.3.10",
        "@types/node": "^20.17.24",
        "@types/pdfkit": "^0.13.9",
        "@types/react": "^18.3.18",
        "@types/react-dom": "^18.3.5",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/coverage-v8": "^2.1.9",
        "@vitest/ui": "^3.1.4",
        "dotenv": "^16.4.7",
        "drizzle-kit": "^0.31.1",
        "electron": "^29.4.6",
        "electron-builder": "^26.0.12",
        "jsdom": "^24.1.3",
        "patch-package": "^8.0.0",
        "sql-formatter": "^15.6.4",
        "tailwindcss": "4.1.0",
        "typescript": "5.3",
        "vite": "^4.5.9",
        "vite-plugin-electron": "^0.15.6",
        "vite-plugin-electron-renderer": "^0.14.6",
        "vitest": "^2.0.5"
    },
    "engines": {
        "node": "22"
    }
}
