{
    "name": "openmarch",
    "productName": "OpenMarch",
    "version": "0.0.5b",
    "main": "dist-electron/main/index.js",
    "description": "OpenMarch is a free and open-source drill-designing software.",
    "author": "OpenMarch LLC",
    "license": "GPL-3.0",
    "private": true,
    "debug": {
        "env": {
            "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
        }
    },
    "scripts": {
        "dev": "eslint . && vite",
        "app:prepare": "node_modules/.bin/electron-rebuild -f -w better-sqlite3 && vite",
        "build": "tsc && vite build && electron-builder -mwl ",
        "clean": "rm -rf node_modules dist-electron release",
        "preview": "vite preview",
        "pree2e": "vite build --mode=test",
        "e2e": "playwright test",
        "postinstall": "electron-builder install-app-deps && electron-rebuild && npm rebuild canvas --update-binary",
        "lint": "eslint . --max-warnings 0",
        "lint-fix": "npm run lint -- --fix",
        "prepare": "husky",
        "prettier": "prettier --check .",
        "prettier-fix": "prettier --write .",
        "spellcheck": "cspell 'src/**' 'electron/**' '*.md'",
        "test": "eslint . && vitest",
        "test:prepare": "npm rebuild better-sqlite3",
        "test:run": "vitest run",
        "test:coverage": "npm run test:run -- --coverage",
        "test:clearCache": "vitest --clearCache"
    },
    "dependencies": {
        "@fontsource/dm-mono": "^5.1.0",
        "@fontsource/dm-sans": "^5.1.0",
        "@phosphor-icons/react": "^2.1.7",
        "@radix-ui/react-alert-dialog": "^1.1.2",
        "@radix-ui/react-checkbox": "^1.1.1",
        "@radix-ui/react-collapsible": "^1.1.0",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-form": "^0.1.0",
        "@radix-ui/react-radio-group": "^1.2.0",
        "@radix-ui/react-select": "^2.1.1",
        "@radix-ui/react-toggle-group": "^1.1.0",
        "@radix-ui/react-tooltip": "^1.1.2",
        "adm-zip": "^0.5.16",
        "autoprefixer": "^10.4.19",
        "better-sqlite3": "^9.6.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.2.1",
        "fabric": "^5.3.0",
        "jquery": "^3.7.1",
        "nan": "^2.19.0",
        "postcss": "^8.4.38",
        "puppeteer": "^22.13.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^4.12.0",
        "sass": "^1.70.0",
        "sonner": "^1.5.0",
        "tailwind-merge": "^2.5.2",
        "xml2abc": "file:external-packages/xml2abc.tgz",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@electron/rebuild": "^3.6.0",
        "@playwright/test": "^1.43.1",
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "^15.0.6",
        "@testing-library/user-event": "^14.5.2",
        "@types/better-sqlite3": "^7.6.8",
        "@types/fabric": "^5.3.6",
        "@types/node": "^20.10.5",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "@typescript-eslint/parser": "^6.21.0",
        "@vitejs/plugin-react": "^4.0.4",
        "@vitest/coverage-v8": "^2.1.8",
        "canvas": "^2.11.2",
        "cspell": "^8.16.1",
        "electron": "^29.3.3",
        "electron-builder": "^24.6.3",
        "eslint": "^8.56.0",
        "eslint-config-react-app": "^7.0.1",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^9.1.7",
        "jest-canvas-mock": "^2.5.2",
        "jsdom": "^24.1.1",
        "lint-staged": "^15.2.10",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "tailwindcss": "^3.4.3",
        "typescript": "5.3",
        "vite": "^4.4.9",
        "vite-plugin-electron": "^0.15.5",
        "vite-plugin-electron-renderer": "^0.14.5",
        "vitest": "^2.0.5"
    },
    "engines": {
        "node": ">18.0.0"
    }
}
