{
    "name": "@openmarch/core",
    "type": "module",
    "license": "AGPL-3.0",
    "types": "./dist/index.d.ts",
    "version": "1.1.0",
    "publishConfig": {
        "@openmarch:registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup --format esm,cjs",
        "pretest": "pnpm build",
        "test": "vitest run --silent",
        "test:watch": "vitest"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE"
    ],
    "devDependencies": {
        "@openmarch/config": "workspace:*",
        "tsup": "^8.5.0",
        "typescript": "latest",
        "vitest": "^2.1.9"
    }
}
