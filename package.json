{
    "name": "openmarch",
    "productName": "OpenMarch",
    "description": "Free drill-writing software for the marching arts",
    "version": "0.0.7",
    "main": "dist-electron/main/index.js",
    "author": "OpenMarch LLC",
    "license": "GPL-3.0",
    "private": true,
    "homepage": "https://openmarch.com",
    "funding": {
        "type": "patreon",
        "url": "https://www.patreon.com/c/openmarch"
    },
    "bugs": {
        "url": "https://github.com/OpenMarch/OpenMarch/issues",
        "email": "dev@openmarch.com"
    },
    "debug": {
        "env": {
            "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/OpenMarch/OpenMarch.git"
    },
    "scripts": {
        "dev": "vite",
        "app:prepare": "node_modules/.bin/electron-rebuild -f -w better-sqlite3 && vite",
        "build": "tsc && vite build",
        "clean": "rm -rf node_modules dist-electron release",
        "preview": "vite preview",
        "pree2e": "vite build --mode=test",
        "e2e": "playwright test",
        "lint": "eslint . --max-warnings 0",
        "lint-fix": "npm run lint -- --fix",
        "postinstall": "rimraf node_modules/canvas && electron-builder install-app-deps && electron-rebuild",
        "prepare": "husky",
        "prettier": "prettier --check .",
        "prettier-fix": "prettier --write .",
        "spellcheck": "cspell 'src/**' 'electron/**' '*.md'",
        "test": "vitest /Users/openmarchdev/Documents/GitHub/OpenMarch/electron/database/tables/__test__/PageTable.test.ts",
        "test:prepare": "npm rebuild better-sqlite3",
        "test:run": "vitest run",
        "test:coverage": "npm run test:run -- --coverage",
        "test:clearCache": "vitest --clearCache"
    },
    "dependencies": {
