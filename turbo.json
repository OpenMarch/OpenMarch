{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**"],
            "env": [
                "PAYLOAD_CMS_URL",
                "PUBLIC_SUPABASE_KEY",
                "WEBSITE_DEPLOY_HOOK_URL"
            ]
        },
        "test": {
            "dependsOn": ["build", "^build"],
            "outputs": []
        },
        "test:coverage": {
            "dependsOn": ["build", "^build"],
            "outputs": []
        },
        "test:clearCache": {
            "outputs": []
        },
        "desktop#postinstall": {
            "outputs": []
        },
        "clean": {
            "outputs": []
        },
        "fix": {
            "outputs": [],
            "cache": false
        },
        "spellcheck": {
            "outputs": [],
            "cache": false
        },
        "format": {
            "outputs": [],
            "cache": false
        },
        "lint": {
            "outputs": [],
            "cache": false
        },
        "preview": {
            "outputs": []
        },
        "e2e": {
            "outputs": []
        },
        "dev": {
            "persistent": true,
            "cache": false
        }
    }
}
