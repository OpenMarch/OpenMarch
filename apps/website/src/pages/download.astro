---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import { WarningNote } from "@openmarch/ui";
import GithubReleases from "@/components/download/GithubReleases.tsx";
import DownloadCards from "@/components/download/DownloadCards.tsx";
import editorDark from "@/assets/home/editor-dark.png";
import editorLight from "@/assets/home/editor-light.png";
---

<Layout title="Download">
    <section
        id="download"
        class="relative flex h-1040 w-full min-w-0 flex-col items-center gap-32 max-[1200px]:h-fit"
    >
        <div
            class="bg-accent motion-preset-fade-lg absolute -top-1/5 left-1/2 -z-50 size-[700px] -translate-x-1/2 rounded-full opacity-25 blur-[20vmin]"
        >
        </div>

        <div
            class="flex h-full w-full gap-16 items-center justify-center max-[1024px]:flex-col max-[1024px]:gap-32"
        >
            <div class="w-[512px] flex flex-col gap-16 max-[600px]:w-full">
                <p class="font-mono text-accent text-lg motion-preset-fade-lg">
                    <span class="font-bold" id="download-count">9,000+</span>
                    downloads & counting!
                </p>
                <h1 class="text-h2 motion-preset-slide-up-md">
                    Download the Modern Drill Writing App
                </h1>
                <WarningNote>
                    Keep in mind, OpenMarch is still in development, and you may
                    encounter issues and missing features.
                </WarningNote>
            </div>
            <Image
                src={editorDark}
                alt="Editor image"
                width={1920}
                height={1080}
                quality={80}
                format="webp"
                class="hidden motion-preset-fade-lg dark:block aspect-video w-[650px] h-auto border border-stroke rounded-6 max-[1024px]:w-full max-[1024px]:max-w-[650px]"
            />
            <Image
                src={editorLight}
                alt="Editor image"
                width={1920}
                height={1080}
                quality={80}
                format="webp"
                class="block motion-preset-fade-lg dark:hidden aspect-video w-[650px] h-auto border border-stroke rounded-6 max-[1024px]:w-full max-[1024px]:max-w-[650px]"
            />
        </div>

        <DownloadCards client:load client:only="react" />
    </section>
    <GithubReleases client:load />
</Layout>
<script>
    import { fetchFromGitHub } from "@/utils/gitHubApi.js";

    async function getTotalDownloadCount() {
        try {
            const releases = await fetchFromGitHub(
                "/repos/OpenMarch/OpenMarch/releases",
                600,
            );
            let totalDownloads = 0;
            for (const release of releases) {
                for (const asset of release.assets) {
                    totalDownloads += asset.download_count;
                }
            }
            return totalDownloads.toLocaleString();
        } catch (error) {
            console.error("Failed to fetch download count", error);
            return "9,000+";
        }
    }
    getTotalDownloadCount().then((count) => {
        document.getElementById("download-count").textContent = count;
    });
</script>
