{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Debug App",
            "preLaunchTask": "Before Debug",
            "configurations": ["Debug Main Process", "Debug Renderer Process"],
            "presentation": {
                "hidden": false,
                "group": "",
                "order": 1
            },
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Debug Current Vitest Test File - desktop",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/apps/desktop/node_modules/vitest/vitest.mjs",
            "args": [
                "run",
                "${file}",
                "--reporter=verbose",
                "--no-coverage"
            ],
            "cwd": "${workspaceFolder}/apps/desktop",
            "env": {
                "NODE_ENV": "test",
                "VITEST_ENABLE_HISTORY": "true",
                "VITEST_ENABLE_BETTER_SQLITE": "false"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Debug Main Process",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "runtimeArgs": [
                "--no-sandbox",
                "--remote-debugging-port=9929",
                "--inspect-brk=9929",
                "."
            ],
            "envFile": "${workspaceFolder}/.vscode/.debug.env",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Renderer Process",
            "port": 9930,
            "request": "attach",
            "type": "chrome",
            "timeout": 60000,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceRoot}/node_modules/**",
                "${workspaceRoot}/dist-electron/**",
                // Skip files in host(VITE_DEV_SERVER_URL)
                "http://127.0.0.1:7777/**"
            ]
        }
    ]
}
